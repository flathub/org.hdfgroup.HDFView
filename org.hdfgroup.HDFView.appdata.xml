<?xml version="1.0" encoding="UTF-8"?>
<component type="desktop-application">
  <id>org.hdfgroup.HDFView</id>
  <metadata_license>CC0-1.0</metadata_license>
  <project_license>
    LicenseRef-1=https://github.com/HDFGroup/hdfview/blob/master/COPYING
  </project_license>
  <developer_name>The HDF Group</developer_name>
  <name>HDFView</name>
  <summary>Browse and edit HDF files</summary>
  <url type="bugtracker">https://github.com/HDFGroup/hdfview/issues</url>
  <url type="contact">https://portal.hdfgroup.org/display/support/Contact+Information</url>
  <url type="donation">https://www.hdfgroup.org/about-us/donate-to-the-hdf-group</url>
  <url type="faq">https://portal.hdfgroup.org/display/knowledge</url>
  <url type="help">https://portal.hdfgroup.org/display/HDFVIEW/HDFView</url>
  <url type="homepage">https://www.hdfgroup.org/downloads/hdfview</url>
  <content_rating type="oars-1.1" />
  <description>
    <p>
      HDFView is an HDF4 and HDF5 file viewer. It let you browse and arrange
      the tree structure files hierarchy, view and modify the content of 
      datasets and add, modify or delete their attributes metadata.
    </p>
  </description>
  <screenshots>
    <screenshot type="default">
      <image>https://www.hdfgroup.org/wp-content/uploads/2017/07/hdfview-sample3.png</image>
    </screenshot>
  </screenshots>
  <launchable type="desktop-id">org.hdfgroup.HDFView.desktop</launchable>
  <provides>
    <binary>hdfview</binary>
  </provides>
  <requires>
    <display_length compare="ge">360</display_length>
  </requires>
  <recommends>
    <control>keyboard</control>
    <control>pointing</control>
  </recommends>
  <releases>
    <release version="3.3.0" date="2023-04-11">
      <url type="details">https://portal.hdfgroup.org/display/support/HDFView+3.3.0</url>
      <description>
        <p>Maintenance release with a number of new features and changes:</p>
        <ul>
          <li>Major enhancements
            <ul>
              <li>New hdf5 1.12 references support</li>
              <li>SWMR created file read support with configurable refresh timer</li>
              <li>Attribute object refactored classes</li>
            </ul>
          </li>
          <li>Major bug fixes
            <ul>
              <li>Better variable-length types support</li>
              <li>NETCDF-4 grids read and write crash fix</li>
            </ul>
          </li>
        </ul>
      </description>
    </release>
    <release version="3.2.0" date="2022-05-09">
      <url type="details">https://portal.hdfgroup.org/display/support/HDFView+3.2.0</url>
      <description>
        <p>Maintenance release with a number of new features and changes:</p>
        <ul>
          <li>Major enhancements
            <ul>
              <li>New hdf5 1.12 references support</li>
              <li>SWMR created file read support with configurable refresh timer</li>
              <li>Attribute object refactored classes</li>
            </ul>
          </li>
          <li>Major bug fixes
            <ul>
              <li>Non-standard floating point numbers read support</li>
              <li>New optional startDir command line option</li>
              <li>Corrected user.home vs user.dir confusion</li>
              <li>Splitted Current Working Directory option</li>
            </ul>
          </li>
        </ul>
      </description>
    </release>
  </releases>
</component>
